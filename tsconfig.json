{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "baseUrl": "./packages",
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "removeComments": true,
    "noEmitOnError": false,
    "locale": "en",
    "emitBOM": true,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "exclude": [
    "packages/*/dist",
    "node_modules",
    "packages/*/node_modules"
  ]
}
